CREATE DATABASE db1;
USE db1;

CREATE TABLE CUSTOMERS(
    ID INT,
    NAME VARCHAR(50),
    AGE INT,
    ADDRESS VARCHAR(50),
    SALARY DECIMAL(10,2),
    PRIMARY KEY(ID)
);

INSERT INTO CUSTOMERS VALUES (1, 'Ramesh', 32, 'Ahmedabad', 2000.00);
