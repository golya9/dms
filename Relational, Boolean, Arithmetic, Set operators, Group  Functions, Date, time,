SELECT ID, NAME, SALARY 
FROM CUSTOMERS 
WHERE SALARY > 2000 AND AGE < 25;

SELECT ID, NAME, SALARY 
FROM CUSTOMERS 
WHERE SALARY > 2000 OR AGE < 25;

SELECT * 
FROM CUSTOMERS 
WHERE SALARY = SALARY + 1000;

SELECT dept_id, SUM(salary) AS total_salaries 
FROM employees 
GROUP BY dept_id;

SELECT * 
FROM CUSTOMERS 
WHERE SALARY LIKE '200%';

SELECT * FROM hostel1 
UNION 
SELECT * FROM hostel2;

SELECT * FROM hostel1 
INTERSECT 
SELECT * FROM hostel2;

SELECT * FROM hostel1 
MINUS 
SELECT * FROM hostel2;

SELECT * 
FROM CUSTOMERS 
WHERE ID IN (SELECT ID FROM CUSTOMERS WHERE SALARY > 4500);

SELECT DATE("2017-06-15 09:34:21");

SELECT * 
FROM Orders 
WHERE OrderDate = '2017-06-15';
